generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum QuizStatus {
  DRAFT
  PUBLISHED
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  accountId   String   // Central account system ID
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([email])
  @@index([accountId])
}

model QuizPost {
  id          String     @id @default(cuid())

  authorId    String?
  authorEmail String?

  title       String
  description String?
  status      QuizStatus @default(DRAFT)
  isActive    Boolean    @default(false)
  icon        String?    @default("Brain")
  gradient    String?    @default("from-purple-500 to-pink-500")

  slug        String?    @unique
  theme       Json       @default("{}")

  questions    Question[]
  attempts     Attempt[]
  scoreEntries ScoreEntry[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  publishedAt DateTime?
}

model Question {
  id         String   @id @default(cuid())
  quizPostId String
  quizPost   QuizPost @relation(fields: [quizPostId], references: [id], onDelete: Cascade)

  order      Int
  text       String
  type       String   @default("MULTIPLE_CHOICE")
  points     Int      @default(1)

  choices    Choice[]
  answers    Answer[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([quizPostId, order])
  @@index([quizPostId])
}

model Choice {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  order      Int
  text       String
  isCorrect  Boolean  @default(false)

  answers    Answer[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([questionId, order])
  @@index([questionId])
  @@index([questionId, isCorrect])
}

model Attempt {
  id         String   @id @default(cuid())

  quizPostId String
  quizPost   QuizPost @relation(fields: [quizPostId], references: [id], onDelete: Cascade)

  // SHA-256(anon_device_id + DEVICE_ID_PEPPER)
  deviceHash String

  playerName String
  playerEmail String?
  accountId  String?  // Central account system ID

  createdAt   DateTime  @default(now())
  startedAt   DateTime  @default(now())
  finishedAt  DateTime?
  updatedAt   DateTime  @updatedAt

  score     Int @default(0)
  maxScore  Int @default(0)

  answers     Answer[]
  scoreEntry  ScoreEntry?

  @@index([quizPostId, createdAt])
  @@index([quizPostId, deviceHash])
  @@index([deviceHash])
  @@index([accountId])
}

model Answer {
  id         String   @id @default(cuid())

  attemptId  String
  attempt    Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  choiceId String?
  selectedChoice   Choice? @relation(fields: [choiceId], references: [id], onDelete: SetNull)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([attemptId])
  @@index([questionId])
  @@index([choiceId])
}

model ScoreEntry {
  id         String   @id @default(cuid())

  quizPostId String
  quizPost   QuizPost @relation(fields: [quizPostId], references: [id], onDelete: Cascade)

  attemptId  String   @unique
  attempt    Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  deviceHash String
  accountId  String?  // Central account system ID

  name      String
  email     String
  emailHash String

  score    Int
  maxScore Int

  createdAt DateTime @default(now())

  @@index([quizPostId, createdAt])
  @@index([quizPostId, deviceHash])
  @@index([quizPostId, emailHash])
  @@index([deviceHash])
  @@index([emailHash])
  @@index([accountId])
}
